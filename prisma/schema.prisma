generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model FoodItem {
  id             String @id @default(uuid())
  calories       Int
  cooking_method String
  protein        Int
  carbs          Int
  fibers         Int

  category   FoodCategory @relation(fields: [categoryId], references: [id])
  categoryId String

  @@index([categoryId])
}

model FoodCategory {
  id String @id @default(uuid())

  foodItems FoodItem[]
}
